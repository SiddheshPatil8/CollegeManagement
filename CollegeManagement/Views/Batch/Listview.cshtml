
@{
    ViewBag.Title = "Listview";
}

<div ng-app="CMSApp" ng-controller="BatchController">
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Batch</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="../Batch/AddNewInfo">Add New Info</a></li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">


            <div class="row">

                <div class="col-md-12">
                    <table class="table table-responsive">
                        <tr>
                            <td>SL#</td>
                            <td>Batch Name</td>
                            <td>Edit</td>
                            <td>Delete</td>
                        </tr>
                        <tr ng-repeat="d in Batch" ng-class-even="'even'" ng-class-odd="'odd'">
                            <td>{{d.SL}}</td>
                            <td>{{d.BName}}</td>
                            <td>
                                <a href="/Batch/AddNewInfo?MasterId=" class="btn btn-warning">Edit</a>

                            </td>
                            <td><a ng-click="DeleteMAsterData(e.BatchId)" class="btn btn-danger">Delete</a> </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
</div>
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/AngularController/BatchController.js"></script>
